<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mascota" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maco_orange</item>
        <item name="colorPrimaryVariant">@color/maco_ivory</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@color/maco_ivory</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="h1" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/noto_sans_kr_regular</item>
    </style>

    <style name="user_sub1" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/maco_dark_gray</item>
        <item name="fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <style name="user_body2" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/maco_gray</item>
        <item name="fontFamily">@font/noto_sans_kr_regular</item>
    </style>

    <style name="user_input_style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/selector_signin_signup_edit_text</item>
        <item name="fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textColor">@color/maco_black</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:paddingEnd">11dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColorHint">@color/maco_light_gray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="mascota_rounded_button_style" parent="@style/Widget.AppCompat.TextView">
        <item name="android:background">@drawable/selector_signin_signup_btn</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/maco_white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>